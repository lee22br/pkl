module Application

/// The hostname that this server responds to.
hostname: String

/// The port to listen on.
port: Int(isBetween(8080, 8090))

/// The environment to deploy to.
environment: Environment

/// The database connection for this application
class Database {
  username: String
  password: String
  host: String
  port: UInt16
  dbName: String
}

database: Database

typealias Environment = "demo"|"stage"|"prod"